{
  "name": "vs-yuedu",
  "displayName": "VS-YueDu",
  "description": "VS Code本地文件阅读器，支持在终端中阅读文件",
  "version": "0.0.2",
  "icon": "assets/icon.png",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:vs-yuedu.addFile",
    "onCommand:vs-yuedu.readInTerminal",
    "onCommand:vs-yuedu.gotoLastRead"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "VS-YueDu",
      "properties": {
        "vs-yuedu.enableRandomCode": {
          "type": "boolean",
          "default": false,
          "description": "是否在阅读内容中混合显示随机代码作为干扰"
        },
        "vs-yuedu.randomCodeRatio": {
          "type": "number",
          "default": 0.3,
          "minimum": 0.1,
          "maximum": 0.8,
          "description": "随机代码在内容中的占比（0.1-0.8）"
        },
        "vs-yuedu.readingList": {
          "type": "array",
          "default": [],
          "description": "阅读列表文件路径配置",
          "items": {
            "type": "object",
            "properties": {
              "filePath": {
                "type": "string",
                "description": "文件完整路径"
              },
              "displayName": {
                "type": "string",
                "description": "自定义显示名称（可选）"
              },
              "lastReadChapter": {
                "type": "string",
                "description": "最后阅读的章节标题（系统自动记录）"
              },
              "lastReadLine": {
                "type": "number",
                "description": "最后阅读的行号（系统自动记录）"
              }
            },
            "required": ["filePath"]
          }
        }
      }
    },
    "commands": [
      {
        "command": "vs-yuedu.addFile",
        "title": "添加文件到阅读列表",
        "category": "VS-YueDu"
      },
      {
        "command": "vs-yuedu.refresh",
        "title": "刷新阅读列表",
        "category": "VS-YueDu"
      },
      {
        "command": "vs-yuedu.previousChapter",
        "title": "上一章",
        "category": "VS-YueDu"
      },
      {
        "command": "vs-yuedu.nextChapter",
        "title": "下一章",
        "category": "VS-YueDu"
      },
      {
        "command": "vs-yuedu.switchToTerminal",
        "title": "切换到终端（老板键）",
        "category": "VS-YueDu"
      },
      {
        "command": "vs-yuedu.readChapter",
        "title": "阅读章节",
        "category": "VS-YueDu"
      },
      {
        "command": "vs-yuedu.gotoLastRead",
        "title": "跳转到上次阅读位置",
        "category": "VS-YueDu"
      }
    ],
    "keybindings": [
      {
        "command": "vs-yuedu.previousChapter",
        "key": "ctrl+shift+alt+p",
        "mac": "cmd+shift+alt+p",
        "when": "true"
      },
      {
        "command": "vs-yuedu.nextChapter",
        "key": "ctrl+shift+alt+n",
        "mac": "cmd+shift+alt+n",
        "when": "true"
      },
      {
        "command": "vs-yuedu.switchToTerminal",
        "key": "ctrl+shift+alt+t",
        "mac": "cmd+shift+alt+t",
        "when": "true"
      },
      {
        "command": "vs-yuedu.gotoLastRead",
        "key": "ctrl+shift+alt+l",
        "mac": "cmd+shift+alt+l",
        "when": "true"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "vs-yuedu.sidebar",
          "name": "VS-YueDu",
          "when": "true"
        }
      ]
    },
    "menus": {
      "explorer/context": [
        {
          "command": "vs-yuedu.addFile",
          "when": "resourceScheme == file",
          "group": "navigation"
        }
      ],
      "view/title": [
        {
          "command": "vs-yuedu.refresh",
          "when": "view == vs-yuedu.sidebar",
          "group": "navigation"
        }
      ],

      "commandPalette": [
        {
          "command": "vs-yuedu.addFile",
          "when": "false"
        }
      ],
      "view/item/context": [
        {
          "command": "vs-yuedu.gotoLastRead",
          "when": "view == vs-yuedu.sidebar && viewItem == file",
          "group": "navigation@1"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/snowkei/vs-yuedu.git"
  }
}